{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "https://raw.githubusercontent.com/neilmistryamplience/ca-frontend-renders/master/src/renders/dixonsSlide/content-type/dixonsSlide.json",
  "title": "Dixons Slide",
  "description": "Slide for the Dixons Homepage Carousel",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "title": "Title",
      "description": "The title for this slide",
      "validation": "Please enter less than 255 characters",
      "minLength": 0,
      "maxLength": 255
    },
    "mobileImg": {
      "type": "object",
      "title": "Image (Mobile)",
      "description": "The image for this slide to be displayed on Mobile",
      "anyOf": [
        {
          "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link"
        }
      ]
    },
    "desktopImg": {
      "type": "object",
      "title": "Image (Desktop)",
      "description": "The image for this slide to be displayed on Desktop",
      "anyOf": [
        {
          "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link"
        }
      ]
    },
    "link": {
      "type": "object",
      "title": "Link",
      "description": "The link for this slide. Note that the label will not be displayed",
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/neilmistryamplience/ca-frontend-renders/master/src/renders/link/content-type/link.json"
        }
      ],
      "_interpolate": true
    }
  },
  "propertyOrder": [
    "title",
    "mobileImg",
    "desktopImg",
    "link"
  ]
}