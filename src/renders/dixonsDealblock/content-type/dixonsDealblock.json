{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "https://raw.githubusercontent.com/neilmistryamplience/ca-frontend-renders/master/src/renders/dixonsDealblock/content-type/dixonsDealblock.json",
  "title": "Dixons Deal Block",
  "description": "A Dixons Deal Block",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "title": "Title",
      "description": "The title for this deal",
      "validation": "Please enter less than 255 characters",
      "minLength": 0,
      "maxLength": 255
    },
    "image": {
      "type": "object",
      "title": "Image",
      "description": "The image for this deal",
      "anyOf": [
        {
          "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link"
        }
      ]
    },
    "link": {
      "type": "object",
      "title": "Link",
      "description": "The link for this slide. Note that the label will not be displayed",
      "allOf": [
        {
          "$ref": "https://raw.githubusercontent.com/neilmistryamplience/ca-frontend-renders/master/src/renders/link/content-type/link.json"
        }
      ],
      "_interpolate": true
    },
    "campaign": {
      "type": "string",
      "title": "Campaign",
      "description": "Name for the campaign type (ie Savings)",
      "validation": "Please enter less than 255 characters",
      "minLength": 0,
      "maxLength": 255
    }
  },
  "propertyOrder": [
    "title",
    "image",
    "link",
    "campaign"
  ]
}